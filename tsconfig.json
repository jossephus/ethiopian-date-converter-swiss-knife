{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": ["es2015", "dom"],
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist"]
  }